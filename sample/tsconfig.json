// experimentalDecorators
{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
